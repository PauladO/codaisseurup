<% if current_user != @event.user %>
  <div class="panel panel-primary">
    <div class="panel-heading">Register for this event</div>

    <div class="panel-body">
      <%= render 'events/registrationform' %>
    </div>
  </div>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <p>Location: <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>
    <p>From  <%= @event.starts_at.strftime("%A, %m-%d-'%y, at %H:%M") %> until <%= @event.ends_at.strftime("%A, %m-%d, at %H:%M") %></p>
    <hr />
    <p>Price:  <%= @event.price %></p>
    <p>Capacity:   <%= @event.capacity %><%= @event.capacity > 1 ? " guests" : " guest" %></p>
    <hr />

    <h4>About</h4>
    <p><%= @event.description %></p>
    <p>Food included: <%= @event.includes_food ? "Yes" : "No" %></p>
    <p>Status:  <%= @event.active ? "Active" : "Inactive" %></p>

    <h4>Photos</h4>
    <% @photos.each do |photo| %>
      <%= image_tag photo.image %>
    <% end %>


    <hr />
    <h5>Categories</h5>
    <% @categories.each do |category| %>
      <span class="label label-success"><%= category.name %></span>
    <% end %>
  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
